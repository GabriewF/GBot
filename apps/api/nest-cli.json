{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "entryFile": "src/",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.json",
    "webpack": false,
    "assets": ["src/static"],
    "deleteOutDir": true
  },
  "generateOptions": {
    "spec": true,
    "flat": false
  },
  "language": "ts"
}